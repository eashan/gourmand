<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codingc.team26.restofinder.restaurant_info"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Restaurant"
        style="?android:attr/listSeparatorTextViewStyle"
        android:id="@+id/restaurantname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#004747"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/rcost"
        android:layout_alignEnd="@+id/rcost"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Address"
        android:id="@+id/raddress"
        style="?android:attr/listSeparatorTextViewStyle"
        android:textSize="15dp"
        android:layout_below="@+id/call"
        android:layout_alignRight="@+id/call"
        android:layout_alignEnd="@+id/call"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cost"
        android:id="@+id/rcost"
        style="?android:attr/listSeparatorTextViewStyle"
        android:minHeight="40dp"
        android:maxHeight="40dp"
        android:textSize="15dp"
        android:layout_below="@+id/cuisinebtn"
        android:layout_alignRight="@+id/cuisinebtn"
        android:layout_alignEnd="@+id/cuisinebtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cuisine"
        android:id="@+id/cuisinebtn"
        style="?android:attr/listSeparatorTextViewStyle"
        android:textSize="15dp"
        android:layout_below="@+id/raddress"
        android:layout_alignRight="@+id/raddress"
        android:layout_alignEnd="@+id/raddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="80dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:id="@+id/call"
        android:layout_below="@+id/restaurantname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_alignBottom="@+id/call"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="opening hours"
        android:id="@+id/openinghours"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_below="@+id/rcost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minHeight="40dp"
        android:maxHeight="30dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Highlights"
        style="?android:attr/listSeparatorTextViewStyle"
        android:id="@+id/highlights"
        android:layout_below="@+id/openinghours"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:height="200dp" />
</RelativeLayout>
